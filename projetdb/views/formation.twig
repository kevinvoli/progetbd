                           </optgroup></select> <br><br>
                           <br><br>
                        <input type="text" name="culture" placeholder="entrez votre culture" required>
                      </fieldset>
                  <fieldset>
                      titre:
                    <input placeholder="Title" name="titre" type="text" tabindex="1" required autofocus>
                  </fieldset>
                 
<br><br>
                  <fieldset>
                    <textarea placeholder="Description...." tabindex="5" name="description" required></textarea>
                  </fieldset>
                  <br><br>
                  <fieldset>
                    <button class="ui button green" name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
                  </fieldset>
                
                </form>
