  <br><br>
        <div class="container ui segment form">  
                <form id="contact" action="" method="post">
                  
                  <h1> <i class="ui icon th mini"></i> FORMATION </h1>
                  <fieldset>
                      Categorie:
                       <select name="categorie">
                           <optgroup label="categorie1">
                             {% for el in element %}
